    <!-- Appointment Checker -->
    <section class="ayur-section">
        <div class="container">
          <h2 class="text-center mb-4">Check Your Appointment</h2>
    
          <form action="/check-appointment" method="POST" class="row g-4">
            <div class="col-md-4">
              <label>Phone Number</label>
              <input type="tel" name="phone" class="form-control" required>
            </div>
            <div class="col-md-4">
              <label>Appointment Date</label>
              <input type="date" name="appointmentDate" class="form-control" required>
            </div>
            <div class="col-md-4">
              <label>Appointment Time</label>
              <select name="appointmentTime" class="form-select" required>
                <option disabled selected hidden>Select Time</option>
                <option>10:00 AM</option>
                <option>11:00 AM</option>
                <option>12:00 PM</option>
                <option>4:00 PM</option>
                <option>5:00 PM</option>
                <option>6:00 PM</option>
              </select>
            </div>
            <div class="col-12 text-center">
              <button type="submit" class="ayur-btn ayur-btn-outline-dark">Check Appointment</button>
            </div>
          </form>
    
          <br>
          <br>
          <% if (appointment) { %>
            <h2 class="text-center mb-4">Your Appointment</h2>
            <div class="mt-5 alert text-dark" style="background-color: var(--ayur-white); border-radius: 10px;">
              <h5>Appointment Found:</h5>
              <p><strong>Name:</strong> <%= appointment.fullName %></p>
              <p><strong>Age:</strong> <%= appointment.age %></p>
              <p><strong>Date of Birth:</strong> <%= appointment.dob.toDateString().slice(4) %></p>
              <p><strong>Phone:</strong> <%= appointment.phone %></p>
              <p><strong>Appointment Date:</strong> <%= appointment.appointmentDate.toDateString() %></p>
              <p><strong>Appointment Time:</strong> <%= appointment.appointmentTime %></p>
            </div>
          <% } %>
    
          <% if (error) { %>
            <div class="mt-4 alert alert-danger">
              <%= error %>
            </div>
          <% } %>
        </div>
    </section>

      
