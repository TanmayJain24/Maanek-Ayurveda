    <script>
        const bookedSlots = JSON.parse('<%- JSON.stringify(bookedSlots) %>');
        const dateInput = document.getElementById('appointmentDate');
        const timeSelect = document.getElementById('appointmentTime');
      
        dateInput.addEventListener('change', () => {
          const selectedDate = dateInput.value; // YYYY-MM-DD
          const bookedTimes = bookedSlots[selectedDate] || [];
      
          Array.from(timeSelect.options).forEach(option => {
            if (option.value === "" || option.value === "Select Time") return;
            option.disabled = bookedTimes.includes(option.value);
            if (option.disabled) {
              option.style.color = "#ccc";
            } else {
              option.style.color = "#000";
            }
          });
      
          // Reset selected time if now disabled
          if (bookedTimes.includes(timeSelect.value)) {
            timeSelect.value = "";
          }
        });
      </script>
