<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/maanek_logo.webp" type="image/x-icon">
    <title>Services | Maanek Ayurveda and Panchkarma Clinic</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light ayur-navbar fixed-top">
        <div class="container">
            <a class="navbar-brand ayur-nav-brand d-flex align-items-center" href="#">
                <img src="/images/maanek_logo.webp" alt="Maanek" style="height: 50px; width: 50px; margin-right: 10px;">
                <div class="d-flex flex-column">
                  <span style="color: var(--ayur-primary); font-weight: 600; line-height: 1;">Maanek Ayurveda and</span>
                  <span style="color: var(--ayur-primary); font-weight: 600; line-height: 1">Panchakarma Clinic</span>
                </div>
              </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link ayur-nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link ayur-nav-link active" href="/about">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link ayur-nav-link" href="/services">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link ayur-nav-link" href="/blogs">Blogs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link ayur-nav-link" href="/contact">Contact</a>
                    </li>
                    <li class="nav-item ms-lg-3">
                        <a class="ayur-btn ayur-btn-outline-dark" href="/consultation">Book Consultation</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <!-- Services Hero -->
    <section class="ayur-hero" data-aos="slide-down" data-aos-duration="600">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <h1>Our Healing Services</h1>
                    <p class="lead">Authentic Ayurvedic treatments tailored to your unique needs</p>
                </div>
            </div>
        </div>
    </section>


    <!-- Services Grid -->
    <section class="ayur-section">
        <div class="container">
            <div class="row g-4">
                <% services.forEach((service, index) => { %>
                    <div class="col-md-6 col-lg-4 service-card <%= index >= 9 ? 'd-none' : '' %>">
                        <div class="ayur-card h-100 d-flex flex-column" data-aos="fade-up" data-aos-delay="<%= 100 + index * 50 %>" data-aos-duration="500">
                            <div class="ayur-card-img-container">
                                <img src="<%= service.heroImage %>" class="ayur-card-img" alt="<%= service.title %>">
                            </div>
                            <div class="ayur-card-body d-flex flex-column flex-grow-1">
                                <div class="d-flex justify-content-between align-items-start ayur-mb-sm">
                                    <h3 class="ayur-card-title"><%= service.title %></h3>
                                    <span class="ayur-price-badge"><%= service.pricing.split('|')[0].trim() %></span>
                                </div>
                                <p class="ayur-card-text flex-grow-1"><%= service.description.length > 150 ? service.description.slice(0, 147) + '...' : service.description %></p>
                                <ul class="ayur-card-list ayur-mb-md">
                                    <% if (service.features && service.features.length >= 3) { %>
                                        <li><i class="fas fa-clock me-2"></i><%= service.features[0].title %></li>
                                        <li><i class="fas fa-calendar-check me-2"></i><%= service.features[1].title %></li>
                                        <li><i class="fas fa-heart me-2"></i><%= service.features[2].title %></li>
                                    <% } %>
                                </ul>
                                <a href="/services/<%= service.slug %>" class="ayur-btn ayur-btn-outline-dark ayur-mt-sm">View Details</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
    
            <% if (services.length > 9) { %>
                <div class="text-center mt-4" data-aos="zoom-in" data-aos-delay="200">
                    <button class="ayur-btn ayur-btn-outline-dark" id="loadMoreBtn">Show More Services</button>
                </div>
            <% } %>
        </div>
    </section>


    <!-- CTA Section -->
    <section class="ayur-section ayur-bg-secondary">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <h2 class="ayur-text-light" data-aos="fade-right" data-aos-duration="1000">Not Sure Which Treatment You Need?</h2>
                    <p class="lead ayur-text-light ayur-mb-lg" data-aos="fade-left" data-aos-duration="1000">Our Ayurvedic doctors will assess your condition and recommend the perfect therapy plan.</p>
                    <a href="/contact" class="ayur-btn ayur-btn-outline-light me-3">Book Consultation</a>
                    <a href="tel:+91 88797 91008" class="ayur-btn ayur-btn-outline-light">Call Now</a>
                </div>
            </div>
        </div>
    </section>


    <!-- Footer -->
    <footer class="ayur-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 ayur-mb-lg">
                    <h5 style="color: var(--ayur-yellow);">Maanek Ayurveda</h5>
                    <p style="color: var(--ayur-yellow);">Your sanctuary for authentic Ayurvedic healing. We're dedicated to helping you achieve optimal health through personalized, holistic care.</p>
                    <div class="ayur-mt-md">
                        <a href="https://m.facebook.com/582995368220422/" class="ayur-social-icon" target="_blank"><i class="fab fa-facebook-f"></i></a>
                        <a href="https://www.instagram.com/maanekayurvedapanchkarmaclinic?igsh=MWhvd3cwd3ppcmdnbg==" class="ayur-social-icon" target="_blank"><i class="fab fa-instagram"></i></a>
                        <a href="https://wa.me/918879791008" class="ayur-social-icon" target="_blank"><i class="fab fa-whatsapp"></i></a>
                        <a href="https://www.youtube.com/@Drankitamodi" class="ayur-social-icon" target="_blank"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
                <div class="col-lg-2 col-md-4 ayur-mb-md">
                    <h5>Quick Links</h5>
                    <ul class="ayur-footer-links" style="padding: 0px;">
                        <li><a href="/">Home</a></li>
                        <li><a href="/about">About Us</a></li>
                        <li><a href="/services">Services</a></li>
                        <li><a href="/blogs">Blog</a></li>
                        <li><a href="/contact">Contact</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-4 ayur-mb-md">
                    <h5>Our Services</h5>
                    <ul class="ayur-footer-links" style="padding: 0px;">
                        <li><a href="/services/panchakarma">Panchakarma Therapy</a></li>
                        <li><a href="/services/abhyanga">Ayurvedic Massage</a></li>
                        <li><a href="/services/siravedh">Siravedh (Venesection)</a></li>
                        <li><a href="/services/shiroabhyanga">Shiroabhyanga</a></li>
                        <li><a href="/services/virechana">Virechana</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-4">
                    <h5>Contact Us</h5>
                    <ul class="ayur-footer-links" style="padding: 0px;">
                        <li><i class="fas fa-map-marker-alt me-2"></i> C 3, Prashant Appartment, Tirandaz, Opposite IIT, Powai, Hare Krishna Road Main Gate Road, Powai-400076</li>
                        <li><i class="fas fa-phone me-2"></i> +91 88797 91008</li>
                        <li><i class="fas fa-envelope me-2"></i> maanek2907@gmail.com</li>
                        <li><i class="fas fa-clock me-2"></i> Mon-Sat: 9am - 8pm</li>
                    </ul>
                </div>
            </div>
            <div class="ayur-copyright text-center">
                <p style="color: var(--ayur-yellow);">&copy; 2025 Maanek Ayurveda. All Rights Reserved.</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const loadMoreBtn = document.getElementById('loadMoreBtn');
        if (loadMoreBtn) {
            loadMoreBtn.addEventListener('click', () => {
                document.querySelectorAll('.service-card.d-none').forEach(card => {
                    card.classList.remove('d-none');
                });
                loadMoreBtn.style.display = 'none';
            });
        }
    </script>    
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>AOS.init();</script>
    <script>
        document.querySelector('i').addEventListener('click', function(e) {
        e.preventDefault();
        window.location.href = this.href;
        });
    </script>
</body>
</html>