    <!-- Hero Section -->
    <section class="ayur-hero" data-aos="fade-down" data-aos-duration="600">
        <div class="container">
        <div class="row">
            <div class="col-12 text-center">
            <h1>Check Your Appointment</h1>
            <p class="lead">Track your consultation status and booking details</p>
            </div>
        </div>
        </div>
    </section>


    <!-- Admin Table -->
    <div class="container py-5">
      <h2 class="mb-4 text-center" style="font-weight: 600; color: #2b3a3a;">
        Doctor Dashboard
      </h2>
    
      <% if (consultations.length > 0) { %>
        <div style="overflow-x:auto;">
          <table 
            class="table table-hover align-middle mb-0"
            style="width:100%; border-collapse:collapse; text-align:center; vertical-align:middle; border:4px solid #198754;">
            
            <thead style="background-color:#198754; color:white; border-bottom:3px solid #145c32;">
              <tr>
                <th style="padding:14px; border:2px solid #198754;">No.</th>
                <th style="padding:14px; border:2px solid #198754;">Patient Name</th>
                <th style="padding:14px; border:2px solid #198754;">Phone</th>
                <th style="padding:14px; border:2px solid #198754;">Email Id</th>
                <th style="padding:14px; border:2px solid #198754;">Date</th>
                <th style="padding:14px; border:2px solid #198754;">Time</th>
                <th style="padding:14px; border:2px solid #198754;">Payment Screenshot</th>
              </tr>
            </thead>
    
            <tbody>
              <% consultations.forEach((c, i) => { %>
                <tr style="transition: background 0.3s;">
                  <td style="border:2px solid #198754;"><%= i + 1 %></td>
                  <td style="font-weight:500; border:2px solid #198754;"><%= c.fullName %></td>
                  <td style="border:2px solid #198754;"><%= c.phone %></td>
                  <td style="border:2px solid #198754;"><%= c.email %></td>
                  <td style="border:2px solid #198754;">
                    <%= new Date(c.appointmentDate).toLocaleDateString('en-IN', { day:'2-digit', month:'short', year:'numeric' }) %>
                  </td>
                  <td style="border:2px solid #198754;"><%= c.appointmentTime %></td>
                  <td style="border:2px solid #198754;">
                    <% if (c.paymentScreenshot) { %>
                      <a href="<%= c.paymentScreenshot %>" target="_blank" 
                         style="color:#0d6efd; text-decoration:none; font-weight:500;">
                        View Screenshot
                      </a>
                    <% } else { %>
                      <span class="text-muted" style="font-style:italic;">No screenshot</span>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <p class="text-center text-muted mt-4" style="font-size:1.1rem;">
          No consultations booked yet.
        </p>
      <% } %>
    </div>
    
    <style>
      table tr:hover {
        background-color: #f3f8f3 !important;
