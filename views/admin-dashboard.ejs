    <!-- Doctor Slot Management -->
    <div class="container my-5">
        <h2 class="mb-4">Doctor Slot Management</h2>
      
        <!-- Add Slot Form -->
        <form action="/admin/add-slot" method="POST" class="row g-3 mb-4">
          <div class="col-md-6">
            <label for="date" class="form-label">Select Date</label>
            <input type="date" name="date" id="date" class="form-control" required>
          </div>
      
          <div class="col-md-4">
            <label for="time" class="form-label">Select Time Slot</label>
            <select name="time" id="time" class="form-select" required>
              <option value="" disabled selected>Select Time</option>
              <option value="09:00">9:00 AM - 10:00 AM</option>
              <option value="10:00">10:00 AM - 11:00 AM</option>
              <option value="11:00">11:00 AM - 12:00 PM</option>
              <option value="12:00">12:00 PM - 1:00 PM</option>
              <!-- Skipping 1 PM to 2 PM -->
              <option value="14:00">2:00 PM - 3:00 PM</option>
              <option value="15:00">3:00 PM - 4:00 PM</option>
              <option value="16:00">4:00 PM - 5:00 PM</option>
              <option value="17:00">5:00 PM - 6:00 PM</option>
            </select>
          </div>
      
          <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-success w-100">Add Slot</button>
          </div>
        </form>
      
        <!-- Existing Slots List -->
        <div class="card">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Available Slots</h5>
          </div>
          <ul class="list-group list-group-flush">
            <% if (slots.length === 0) { %>
              <li class="list-group-item text-muted">No slots added yet.</li>
            <% } else { %>
              <% slots.forEach(slot => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <span>
                    <strong><%= slot.date %></strong> at 
                    <%= new Date(`1970-01-01T${slot.time}`).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %>
                  </span>
                  <form action="/admin/delete-slot" method="POST" class="d-inline">
                    <input type="hidden" name="date" value="<%= slot.date %>">
                    <input type="hidden" name="time" value="<%= slot.time %>">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                  </form>
                </li>
              <% }) %>
            <% } %>
          </ul>
        </div>
    </div>
            

      
